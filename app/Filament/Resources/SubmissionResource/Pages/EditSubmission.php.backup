                // Document requirements section
                Section::make('ğŸ“„ Dokumen yang Diperlukan')
                    ->description('Upload semua dokumen yang diminta')
                    ->schema(fn() => $this->getSimplifiedDocumentSchema())
                    ->collapsible()
